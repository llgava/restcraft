{
  "name": "restcraft",
  "description": "A Minecraft REST API",
  "version": "1.0.0",
  "main": "./build/index.js",
  "repository": "https://github.com/llgava/restcraft.git",
  "author": "llgava <llgavamt@gmail.com>",
  "license": "MIT",
  "scripts": {
    "bump": "yarn upgrade --latest",
    "start": "node .",
    "build": "babel ./src  --extensions \".js,.ts\" --out-dir ./build --copy-files --no-copy-ignored ",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/index.ts",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "mongoose": "^6.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/node": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "babel-plugin-module-resolver": "^4.1.0",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  }
}
