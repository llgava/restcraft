{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      //"@eg/*": ["./src/eg/*"]
    }
  },

  "include": ["./src"],
  "exclude": [
    "./__test__",
    "./src/@types"
  ]
}
