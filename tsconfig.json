// All the options description can be found here: https://www.typescriptlang.org/docs/handbook/compiler-options.html

{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build/src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@models/*": ["./src/models/*"],
      "@routes/*": ["./src/routes/*"],
      "@schemas/*": ["./src/schemas/*"],
      "@services/*": ["./src/services/*"],
      "@controllers/*": ["./src/controllers/*"]
    }
  },

  "include": [ "./src" ],
  "exclude": [
    "./__tests",
    "./src/scripts",
    "./src/utils/Generate.ts"
  ]
}
