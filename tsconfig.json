{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@typings/*": ["src/typings/*"],
      "@controllers/*": ["src/api/controllers/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/api/routes/*"],
      "@utils/*": ["src/utils/*"]
    }
  },

  "include": ["src/", "VanillaResourcePack/"],
  "exclude": [
    "__test__/",
    "src/typings/",
    "scripts/"
  ]
}
