{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@typings/*": ["./src/typings/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@routes/*": ["./src/routes/*"],
      "@schemas/*": ["./src/schemas/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },

  "include": ["./src"],
  "exclude": [
    "./__test__",
    "./src/typings",
    "./scripts"
  ]
}
